<!DOCTYPE html>
<html>
  <head>
    <title>EventSwap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
        Welcome <%= link_to first_name(current_user.name), user_path(current_user) %>  <%= link_to "Logout", '/logout'%>
    <% else %>
        <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
  <%= yield %>
  </body>
</html>

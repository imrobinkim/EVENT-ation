<div class="jumbotron">

<div class="row">

<div class="col-md-4">

<h2>User Info</h2>

<ul>

<li>First Name: <%= first_name(@user.name) %></li>
<li>Last Name: <%= last_name(@user.name) %></li>
<li>Username: <%= @user.username%> </li>
<li>Email: <%= @user.email%> </li>
<li>Age: <%= @user.age%></li>

<%= form_tag edit_user_path(@user), method: :get do %>
<%= submit_tag "Edit Profile" %>
<% end %>
</div>

<div class="col-md-4">


<h2>Events you are hosting</h2>
<div class="outside-hosting">

<% if @user.events == [] %>
<h4>None! Click <%= link_to "here", new_event_path %> to host one!</h4>
<% end %>

<ul>
<% @user.events.each do |event| %>
  <li><%= link_to event.name, event %></li>
<% end %>
</ul>
</div>
</div>

<div class="col-md-4">

<h2>Events you are attending</h2>
<div class="outside-attending">

<% if @user.events_user_is_attending == [] %>
<h4>None! Click <%= link_to "here", events_path %> to browse!</h4>
<% end %>

<ul>
<% @user.events_user_is_attending.each do |event| %>
  <li><%= link_to event.name, event %></li>
<% end %>
</ul>
</div>
</div>
</div>

</div>

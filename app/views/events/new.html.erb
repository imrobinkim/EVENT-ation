<h2>New Event</h2>

<%= render partial: "shared/error_list", locals: {new_object: @event} %>

<%= form_for @event do |f| %>
  <%=f.label :name %>
  <%= f.text_field :name %>

  <%=f.label :address %>
  <%= f.text_field :address %>
  <br>
  <br>
  Interest: <%=f.collection_select :interest_id, Interest.all, :id, :name%>
  <br>
  <br>
  <div class="field">
    <%=f.label :datetime %>
    <%= f.datetime_select :datetime %>
  </div>
  <br>
  <br>
  <% if current_user %>
    <%= f.hidden_field :host_id, value: current_user.id %>
  <% end %>

  <%= f.submit "Sign Up" %>
<% end %>

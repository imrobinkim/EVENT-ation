<h1>Login</h1>

<% if flash.notice%>
 <h3><%= flash.notice %></h3>
 <% end %>

 <%= form_tag "/login" do %>
  <%= label :username, "Username" %>
  <%= text_field_tag :username %>
  <br>
  <%= label :password, "Password" %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Login" %>
  <% end %>
